{
  "name": "codeinwp/optimole-wp",
  "description": "Cloud-based image optimization service -  WordPress Integration",
  "homepage": "https://optimole.com",
  "license": "GPL-2.0+",
  "version": "1.1.2",
  "authors": [
    {
      "name": "Optimole Team",
      "email": "friends@optimole.com.com",
      "homepage": "https://optimole.com"
    }
  ],
  "support": {
    "issues": "https://github.com/Codeinwp/optimole-wp/issues",
    "source": "https://github.com/Codeinwp/optimole-wp"
  },
  "autoload": {
    "files": [
      "vendor/codeinwp/themeisle-sdk/load.php"
    ]
  },
  "autoload-dev": {
    "files": [
      "vendor/codeinwp/themeisle-sdk/load.php",
      "development.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3",
    "wp-coding-standards/wpcs": "^2.3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "yoast/phpunit-polyfills": "^2.0",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "php-stubs/wp-cli-stubs": "^2.8"
  },
  "scripts": {
    "format": "phpcbf --standard=phpcs.xml --report-summary --report-source",
    "phpcs": "phpcs --standard=phpcs.xml --extensions=php -s",
    "test": "[ -z \"$WP_TESTS_DIR\" ] || [ -z \"$WP_CORE_DIR\" ] && echo 'Error: Both WP_TESTS_DIR and WP_CORE_DIR must be defined.' && exit 1 || phpunit --configuration=phpunit.xml",
    "lint": "composer run-script phpcs",
    "phpstan": "phpstan analyse --memory-limit 2G",
    "install-wp-tests": "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
  },
  "require": {
    "php": ">=7.4",
    "codeinwp/themeisle-sdk": "^3.3",
    "codeinwp/optimole-sdk": "^1.2",
    "enshrined/svg-sanitize": "^0.18.0"
  }
}
